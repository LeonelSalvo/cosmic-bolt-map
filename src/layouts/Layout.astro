---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Cosmic Mind Map" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --background-deep-space: #0a0a2a;
  }
  
  html {
    font-family: system-ui, sans-serif;
    background: var(--background-deep-space);
    min-height: 100vh;
  }

  body {
    margin: 0;
    padding: 0;
  }
</style>